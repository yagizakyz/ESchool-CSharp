<Window x:Class="ESchoolDemo.Pages.SelectedStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESchoolDemo.Pages"
        mc:Ignorable="d"
        Title="SelectedStudentWindow" Height="500" Width="550">
    <GroupBox   Grid.Row="0" Grid.Column="0"
                    Header="Selected Student"
                    Margin="5"
                    >
        <StackPanel  Margin="5"  >
            <Label Content="Name " Margin="0 -5 0 -4" />
            <TextBox Name="NameTXT" Cursor="Arrow" TextChanged="NameTXT_TextChanged"/>
            <Label Content="Surname " Margin="0 0 0 -4" />
            <TextBox Name="SurnameTXT" TextChanged="SurnameTXT_TextChanged"/>
            <Label Content="School Number" Margin="0 10 0 -4" />
            <TextBox Name="SchoolNumberTXT" TextChanged="SchoolNumberTXT_TextChanged"/>

            <ListBox Name="StudentListBox" Height="130"/>
            <Button   x:Name="btn"  Margin="3,3,3,3" Click="btn_Click">Return to Previous Page</Button>
        </StackPanel>
    </GroupBox>
</Window>
